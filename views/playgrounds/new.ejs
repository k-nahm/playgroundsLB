<% include ../partials/header %> 
    <div class="row">
        <h1 style="text-align: center">Neuer Spieplatz</h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/playgrounds" method="POST">
                <div class="form-group">
                    <label for="name">Name</label>
                    <input class="form-control" type="text" name="name" placeholder="Name">
                </div>
                <div class="form-group">
                    <label for="image">Bild</label>
                    <input class="form-control" type="text" name="image" placeholder="Bild URL">
                </div>
                <div class="form-group">
                    <label for="description">Beschreibung</label>
                    <input class="form-control" type="text" name="description" placeholder="Beschreibung">
                </div>
                <div class="form-group">
                    <label for="location">Standort</label>
                    <input class="form-control" type="text" name="location" id="location" placeholder="71634 Ludwigsburg, Stresemannstr. 56">
                </div>
                <div class="form-group">
                    <label for="district">Stadtteil</label>
                    <input class="form-control" type="text" name="district" placeholder="Stadtteil">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Bestätigen!</button>
                </div>
            </form>
            <a href="/playgrounds">Zurück</a>
        </div>
    </div>
<% include ../partials/footer %> 
