<% include ../partials/header %> 
    <div class="row">
        <h1 style="text-align: center">Create a New Playground</h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/playgrounds" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="name" placeholder="name">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="image" placeholder="image url">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="description" placeholder="description">
                </div>
                <div class="form-group">
                    <label for="location">Standort</label>
                    <input class="form-control" type="text" name="location" id="location" placeholder="71634 Ludwigsburg, Stresemannstr. 56">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/playgrounds">Go Back</a>
        </div>
    </div>
<% include ../partials/footer %> 
