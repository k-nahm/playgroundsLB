<% include ../partials/header %> 
 <div class="container">
     <header class="jumbotron">
         <div class="container">
             <h1>Welcome To Playground App!</h1>
             <p>View our playgrounds from LB</p>
             <p>
                <a class="btn btn-primary btn-large" href="/playgrounds/new">Spielplatz hinzuf√ºgen</a>
             </p>
         </div>
     </header>
     
     <div class="row text-center" style="display:flex; flex-wrap: wrap;">
        <% playgrounds.forEach(function(playground){ %>
            <div class="col-md-3 col-sm-6">
                <div class="thumbnail">
                   <img src="<%= playground.image %>">
                   <div class="caption">
                       <h4><%= playground.name %></h4>
                   </div>
                   <p>
                       <a href="/playgrounds/<%= playground._id %>" class="btn btn-primary">Mehr Infos</a>
                   </p>
                </div>
            </div>
        <% }); %>
    </div>
</div>

<% include ../partials/footer %> 