<% include ../partials/header %>
    <div class="row">
        <div class="col-md-3">
            <p class="lead">Spielplätze LB</p>
            <div class="list-group">
                <li class="list-group-item active">Info 1</li>
                <li class="list-group-item">Info 2</li>
                <li class="list-group-item">Info 3</li>
            </div>
            <div id="map"></div>
        </div>
        <div class="col-md-9">
            <div class="thumbnail">
                <img class="img-responsive" src="<%= playground.image %>">
                <div class="caption-full">
                    <h4><a><%=playground.name%></a></h4>
                    <p><%= playground.description %></p>
                    <% if(currentUser && currentUser.isAdmin){ %>
                        <a class="btn btn-xs btn-warning" href="/playgrounds/<%= playground._id %>/edit">Ändern</a>
                        <form class="delete-form" action="/playgrounds/<%= playground._id %>?_method=DELETE" method="POST">
                            <button class="btn btn-xs btn-danger">Löschen</button>
                        </form>
                    <% }%>
                </div>
            </div>
            <div class="well">
                <div class="text-right">
                    <a class="btn btn-success" href="/playgrounds/<%= playground._id %>/comments/new">Kommentar hinzufügen</a>
                </div>
                <hr>
                <% playground.comments.forEach(function(comment){ %>
                    <div class="row">
                        <div class="col-md-12">
                            <strong><a href="/users/<%= comment.author.id %>"><%= comment.author.username %></a></strong>
                            <span class="pull-right"><%= moment(comment.createdAt).fromNow() %></span>
                            <p>
                                <%= comment.text %> 
                            </p>
                            <% if(currentUser && comment.author.id.equals(currentUser._id) || currentUser && currentUser.isAdmin){ %>
                                <a class="btn btn-xs btn-warning" 
                                    href="/playgrounds/<%=playground._id %>/comments/<%=comment._id %>/edit">Ändern</a>
                                <form class="delete-form" action="/playgrounds/<%=playground._id %>/comments/<%=comment._id %>?_method=DELETE" method="POST">
                                    <input type="submit" class="btn btn-xs btn-danger" value="Löschen">
                                </form>
                            <% } %>
                        </div>
                    </div>
                <% }) %>
            </div>
        </div>
    </div>
    
    <script>
      function initMap() {
        var lat = <%= playground.lat %>;
        var lng = <%= playground.lng %>;
        var center = {lat: lat, lng: lng };
        var map = new google.maps.Map(document.getElementById('map'), {
            zoom: 13,
            center: center,
            scrollwheel: true
        });
        var contentString = `
        <strong><%= playground.location %></strong><br>
        <a href="https://www.google.com/maps/search/?api=1&query=<%= playground.lat %>,<%= playground.lng %>" target="_blank"><span>In Google Maps ansehen</span></a>
        
        `
        var infowindow = new google.maps.InfoWindow({
          content: contentString
        });
        var marker = new google.maps.Marker({
            position: center,
            map: map
        });
        marker.addListener('click', function() {
          infowindow.open(map, marker);
        });
      }
    </script>
    <script async defer src="https://maps.googleapis.com/maps/api/js?key=AIzaSyAEB4zpOjQmMl2YTPJydHGhfUZbCGwDJ8o&callback=initMap"></script>

<% include ../partials/footer %>