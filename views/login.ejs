<% include ./partials/header %> 

<div class="row">
    <div class="login-form">
        <h2>Anmelden</h2>
        <form action="/login" method="post">
            <div class="form-group">
                <input class="form-control" type="text" name="username" placeholder="Username">
            </div>
            <div class="form-group">
                <input class="form-control" type="password" name="password" placeholder="Passwort">
            </div>
            <div class="form-group">
                <button class="btn btn-lg btn-outline-warning btn-block">Anmelden</button>
            </div>
        </form>
        <div class="form-forgot" style="text-align: center;">
            <form class="delete-form" action="/forgot" method="GET">
                <button class="btn btn-link">Passwort vergessen?</button>
            </form>
        </div>
    </div>
    
</div>

<% include ./partials/footer %> 